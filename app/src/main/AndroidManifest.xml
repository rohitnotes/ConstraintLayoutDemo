<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xpf.constraint">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RelativeLocationActivity" />
        <activity android:name=".activity.CenterLocationActivity" />
        <activity
            android:name=".activity.MarginPropertyActivity"
            android:label="@string/title_activity_margin_property"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.BiasActivity" />
        <activity
            android:name=".activity.SizeActivity"
            android:label="@string/title_activity_size"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.DimensionRatioActivity" />
        <activity android:name=".activity.ChainStyleActivity"></activity>
    </application>

</manifest>